<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_food_card"
    android:layout_marginBottom="12dp"
    android:padding="12dp"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/imgFood"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_food"
        android:contentDescription="Ảnh món ăn" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/tvFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên món ăn"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvFoodPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.000₫"
            android:textStyle="bold"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <ImageView
                android:id="@+id/btnDecrease"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_remove"
                android:contentDescription="Giảm số lượng"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="14sp"
                android:layout_marginHorizontal="8dp" />

            <ImageView
                android:id="@+id/btnIncrease"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_add"
                android:contentDescription="Tăng số lượng"
                app:tint="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/btnRemove"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_delete"
        android:contentDescription="Xoá món ăn"
        android:padding="4dp"/>
</LinearLayout>
