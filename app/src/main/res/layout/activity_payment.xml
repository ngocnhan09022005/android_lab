<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="#FDFDFD">

    <TextView
        android:id="@+id/tvTitleDetail"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text=""
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_gravity="start"
        android:src="@drawable/ic_back"/>

    <TextView
        android:id="@+id/tvAmount"
        android:text="Số tiền thanh toán"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#222"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvNote"
        android:text="Ghi chú thanh toán"
        android:textSize="16sp"
        android:textColor="#555"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/white">

        <ImageView
            android:id="@+id/imgQr"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:padding="8dp"
            android:scaleType="fitCenter"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tvExpiredAt"
        android:text="⏳ Còn lại: --:--"
        android:textSize="14sp"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnDownloadImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Tải ảnh QR"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/btnProceed"
        android:layout_width="264dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_proceed_ripple"
        android:clickable="true"
        android:elevation="8dp"
        android:focusable="true"
        android:fontFamily="@font/lato_regular"
        android:gravity="center"
        android:text="Xác nhận thanh toán"
        android:textColor="#24C77D"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</LinearLayout>
